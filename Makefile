#----------------------------------------------------------------------
# Go settings
#----------------------------------------------------------------------
GOCMD=go
GOBUILD=$(GOCMD) build
GOCLEAN=$(GOCMD) clean
GOGET=$(GOCMD) get

#----------------------------------------------------------------------
# Standard option to run
#----------------------------------------------------------------------
all: build

#----------------------------------------------------------------------
# General building procedure
#----------------------------------------------------------------------
build: deps
	@echo "Building..."
	@$(GOBUILD)

#----------------------------------------------------------------------
# Cleanup
#----------------------------------------------------------------------
clean:
	@echo "Cleaning..."
	@$(GOCLEAN)
	@rm -f $(BINARY)

#----------------------------------------------------------------------
# Dependency retrieval.
#----------------------------------------------------------------------
deps:
	@echo "Fetching dependencies..."
	@$(GOGET) github.com/bwmarrin/discordgo
	@$(GOGET) github.com/MikeModder/anpan
	@$(GOGET) github.com/apaxa-go/eval
